    <script>
        var icon = document.getElementById("ChangeTheme");
        var logo = document.getElementById("logoImage");

        // Check if the user has a theme preference stored in localStorage
        var themePreference = localStorage.getItem("theme");
        if (themePreference) {
            document.body.classList.add(themePreference);
            if (themePreference === "dark-theme") {
                logo.src = "/images/logo-roshan-white.png";
            }
        }

        icon.onclick = function () {
            document.body.classList.toggle("dark-theme");
            if (document.body.classList.contains("dark-theme")) {
                logo.src = "/images/logo-roshan-white.png";
                localStorage.setItem("theme", "dark-theme"); // Store the theme preference in localStorage
            } else {
                logo.src = "/images/logo-roshan.png";
                localStorage.setItem("theme", "light-theme"); // Store the theme preference in localStorage
            }
        };
    </script>
