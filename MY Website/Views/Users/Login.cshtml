@model MY_Website.Models.LoginUserViewModel

@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}


@*Login*@

<div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
    <h6 class="text-success text-center" id="hideMe">@TempData["succcessMessage"]</h6>
    <form method="post" asp-action="Login">
        <div class="my-3">
            <label class="form-label text-dark" asp-for="Email"></label>
            <input type="email" class="form-control  shadow-none rounded-pill" asp-for="Email" placeholder="Enter email"
                   style="padding:11px 0px 11px 26px;background:#ffffff8a">
            <span asp-validation-for="Email" class="text-danger"></span>
            <span class="text-danger">@TempData["errorUser"]</span>
        </div>
        <div class="mb-3">
            <label class="form-label text-dark" asp-for="Password"></label>
            <input id="loginPassword" type="password" class="form-control shadow-none rounded-pill" asp-for="Password" placeholder="Enter password"
                   style="padding:11px 0px 11px 26px;background:#ffffff8a">
            <span asp-validation-for="Password" class="text-danger"></span>
            <span class="text-danger">@TempData["errPassword"]</span>
            <i id="open" class="fa-solid fa-eye float-end" style="margin-top:-30px;margin-right:14px;cursor:pointer; display:none;"></i>
            <i id="close" class="fa-solid fa-eye-slash float-end" style="margin-top:-30px;margin-right:14px;cursor:pointer;"></i>
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" asp-for="IsRemember" class="form-check-input shadow-none" style="cursor:pointer">
            <label class="form-check-label text-dark" asp-for="IsRemember"></label>
        </div>
        <div class="my-1 text-end">
            <a class="text-decoration-none text-primary">Forget Password??</a>
        </div>
        <div class="mb-2 m4-4 text-center d-flex justify-content-center">
            <button type="submit" class="btn btn-outline-lg mt-4 w-50 me-1">Login</button>
        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#open").click(function () {
            $("#open").hide();
            $("#close").show();
            $("#loginPassword").attr("type", "password");
        });
        $("#close").click(function () {
            $("#close").hide();
            $("#open").show();
            $("#loginPassword").attr("type", "text");
        });
    })
</script>